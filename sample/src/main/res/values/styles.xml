<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App" />

    <style name="App.ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="elevation">4dp</item>
    </style>

    <style name="App.Button" parent="Widget.MaterialComponents.Button" />

    <style name="App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">56dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton" />


    <style name="App.TextInput.Layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App.TextInput.Field" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
