<resources>

    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/surface</item>

        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="actionBarStyle">@style/App.ActionBarStyle</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
    </style>

    <style name="AppThemeBase.DayNight">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App" parent="AppThemeBase.DayNight" />

    <style name="Theme.App.Full">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/window_background</item>
    </style>

</resources>
